<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_view_click">

    <com.daydvr.store.view.custom.RoundImageView
        android:id="@+id/iv_video_show"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:type="round"
        app:layout_constraintDimensionRatio="16:10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.daydvr.store.view.custom.RoundImageView
      android:id="@+id/iv_video_shadow"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:scaleType="fitXY"
      app:type="round"
      android:src="#55000000"
      app:layout_constraintDimensionRatio="16:10"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="@string/hint_video_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_views"/>

    <ImageView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:src="@mipmap/play"
      android:paddingTop="2dp"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintTop_toTopOf="@+id/tv_video_views"
      app:layout_constraintBottom_toBottomOf="@+id/iv_video_show"
      app:layout_constraintEnd_toStartOf="@+id/tv_video_views" />

    <TextView
        android:id="@+id/tv_video_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:hint="@string/hint_video_name"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_video_show"
        app:layout_constraintEnd_toEndOf="@+id/iv_video_show"/>

</android.support.constraint.ConstraintLayout>