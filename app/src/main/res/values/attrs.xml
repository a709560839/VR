<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="RotateProgressBar">
    <attr format="dimension" name="loading_width" />
    <attr format="color" name="loading_color" />
    <attr format="integer" name="shadow_position" />
    <attr format="integer" name="loading_speed" />
  </declare-styleable>

  <declare-styleable name="RoundImageView">
    <attr format="enum" name="type">
      <enum name="circle" value="1" />
      <enum name="round" value="2" />
    </attr>
    <attr format="dimension" name="radius" />
  </declare-styleable>

  <declare-styleable name="BannerLayoutStyle">
    <attr format="color|reference" name="selectedIndicatorColor" />
    <attr format="color|reference" name="unSelectedIndicatorColor" />
    <attr format="enum" name="indicatorShape">
      <enum name="rect" value="0" />
      <enum name="oval" value="1" />
    </attr>

    <attr format="dimension|reference" name="selectedIndicatorHeight" />
    <attr format="dimension|reference" name="selectedIndicatorWidth" />

    <attr format="dimension|reference" name="unSelectedIndicatorHeight" />
    <attr format="dimension|reference" name="unSelectedIndicatorWidth" />

    <attr format="enum" name="indicatorPosition">
      <enum name="centerBottom" value="0" />
      <enum name="rightBottom" value="1" />
      <enum name="leftBottom" value="2" />
      <enum name="centerTop" value="3" />
      <enum name="rightTop" value="4" />
      <enum name="leftTop" value="5" />
    </attr>

    <attr format="dimension|reference" name="indicatorSpace" />
    <attr format="dimension|reference" name="indicatorMargin" />
    <attr format="integer|reference" name="autoPlayDuration" />
    <attr format="integer|reference" name="scrollDuration" />
    <attr format="boolean|reference" name="isAutoPlay" />
  </declare-styleable>

  <declare-styleable name="FlikerProgressBar">
    <attr name="textSize" format="dimension"/>
    <attr name="progressColor" format="color"/>
    <attr name="backgroundColor" format="color"/>
    <attr name="pbRadius" format="dimension"/>
    <attr name="borderWidth" format="dimension"/>
  </declare-styleable>


</resources>